{
  "manifest_version": 3,
  "name": "CIO DNS Extractor",
  "version": "1.1.0",
  "description": "Extract DNS records from Customer.io Sending Domains page and validate them automatically.",
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.customer.io/*",
    "*://*.customerio.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.customer.io/*",
        "*://*.customerio.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "CIO DNS Extractor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["extractor.js"],
      "matches": [
        "*://*.customer.io/*",
        "*://*.customerio.com/*"
      ]
    }
  ]
}